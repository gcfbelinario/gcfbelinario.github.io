<div class="list-groups">
  {% for content in data[1] %}
    <div class="list-group col-md-12">
      <table class="table-cv list-group-table">
        <tbody>
          <tr>
            {% if content.icon %}
              <td class="list-group-category-icon">
                <i class="{{ content.icon }}"></i>
              </td>
            {% else %}
              <td class="list-group-category-icon"></td>
            {% endif %}
            <td class="list-group-category" style="color: white;">{{ content.name }}</td>
          </tr>

          {% if content.text %}
            <tr>
              <td></td>
              <td class="list-group-name">
                <p class="mb-0" style="font-size: 0.95rem">{{ content.text }}</p>
              </td>
            </tr>
          {% else %}
            {% for item in content.keywords %}
              <tr>
                <td></td>
                <td class="list-group-name">
                  {{ item }}
                </td>
              </tr>
            {% endfor %}
          {% endif %}
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
